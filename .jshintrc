//.jshintrc
{
  //Custom Globals
  "globals": {
    "Meteor": false,
    "DDP": false,
    "Mongo": false,
    "Session": false,
    "Template": false,
    "Blaze": false,
    "Match": false,
    "check": false,
    "Npm": false,
    "Package": false,
    "Tinytest": false,
    "_": false,
    "ReactiveVar": false,
    "moment": false,
    "mo": false
  },

  "maxerr": 50,

  //Enforcing
  "bitwise": true,
  "curly": true,
  "eqeqeq": true,
  "forin": true,
  "latedef": false,
  "noarg": true,
  "nonew": false,
  "plusplus": false,
  "undef": true,
  "unused": true,
  "strict": true,
  "maxparams": false,
  "maxdepth": false,
  "maxstatements": false,
  "maxcomplexity": false,

  //Relaxing
  "asi": false,
  "boss": false,
  "debug": false,
  "eqnull": false,
  "moz": false,
  "evil": false,
  "expr": false,
  "funcscope": false,
  "globalstrict": true,
  "iterator": false,
  "lastsemic": false,
  "laxbreak": false,
  "laxcomma": false,
  "loopfunc": false,
  "multistr": false,
  "proto": false,
  "scripturl": false,
  "smarttabs": false,
  "shadow": false,
  "sub": false,
  "supernew": false,
  "validthis": false,

  // Environments
  "browser": true,
  "devel": true,
  "jquery": false,
  "node": false
}
